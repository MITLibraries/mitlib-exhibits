{
    "name": "mitlibraries/mitlib-exhibits",
    "description": "A local Omeka S installation",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MITLibraries/mitlibraries-theme-omeka"
        }
    ],
    "require": {
        "composer/installers": "^2.2",
        "oomphinc/composer-installers-extender": "^2.0",
        "mitlibraries/mitlibraries-theme-omeka": "v0.0.4-beta4"
    },
    "extra": {
        "installer-types": [
            "omeka-theme",
            "omeka-plugin"
        ],
        "installer-paths": {
            "web/themes/{$name}/": [
                "type:omeka-theme"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    }
}
