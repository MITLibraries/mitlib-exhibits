{
    "name": "mitlibraries/mitlib-exhibits",
    "description": "A local Omeka S installation",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MITLibraries/mitlibraries-theme-omeka"
        }
    ],
    "require": {
        "composer/installers": "^2.2"
    },
    "extra": {
        "installer-paths": {
            "web/themes/{$name}/": [
                "type:omeka-theme"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
